<% include('./layout'); %>

<h2><%= post.title %></h2>
<p><%= post.content %></p>
<p>
  <small
    >by <%= post.author %> on <%= new Date(post.createdAt).toLocaleString()
    %></small
  >
</p>

<% if (user === post.author) { %>
<a href="/posts/<%= post.id %>/edit">수정</a>
<form
  action="/posts/<%= post.id %>/delete"
  method="POST"
  style="display: inline"
>
  <button type="submit" onclick="return confirm('정말 삭제하시겠습니까?');">
    삭제
  </button>
</form>
<% } %>

<a href="/posts">목록으로 돌아가기</a>
